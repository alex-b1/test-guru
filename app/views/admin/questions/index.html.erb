<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <div class="h4"> <%= t('.header') %> </div>

      <table class="table align-middle mt-4">
        <thead class="table-light">
          <th><%= t('.table_header') %></th>
          <th colspan="3" class="text-center"><%= t('.table_action') %></th>
        </thead>

        <%= render @questions %>
      </table>

      <div class="d-md-flex justify-content-between mt-4">
        <%= button_to t('.create'),
                      new_admin_test_question_path(params[:test_id]),
                      class:"btn btn-success btn-sm",
                      method: :get
        %>
        <%= button_to t('.to_tests'),
                      admin_tests_path,
                      class: "btn btn-secondary btn-sm",
                      method: :get %>
      </div>
  </div>
</div>
