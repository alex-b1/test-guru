<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <div class="h4">
      <strong><%= t('.header') %>: </strong>
        <%= @question.body %>
    </div>

    <hr>

    <div class="h5 mt-2"><%= t('.answers') %>:</div>

    <table class="table align-middle mt-4">
      <%= render partial: 'admin/answers/answer', collection: @question.answers %>
    </table>

    <div class="d-md-flex justify-content-between mt-4">
      <%= button_to t('.new_answer'),
                    new_admin_question_answer_path(@question),
                    class:"btn btn-success btn-sm",
                    method: :get
      %>
      <%= button_to t('element.link.back'),
                    admin_test_path(@question.test),
                    class: "btn btn-secondary btn-sm",
                    method: :get %>
    </div>
  </div>
</div>

