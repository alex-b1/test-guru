<div class="row mt-3">
  <div class="col col-md-8">
    <div class="form-group mt-3">
      <%= form_with model: [:admin, @question, @answer], local: true do |form| %>
        <%=render 'shared/errors', resource: @answer %>

        <div>
          <%= form.label :title%>
          <%= form.text_field :title, id: :answer_title, class: "form-control" %>
        </div>

        <div class="form-check mt-2">
          <%= form.label :correct, class: "form-check-label"  %>
          <%= form.check_box :correct, id: :answer_correct, class: "form-check-input" %>
        </div>

        <div class="actions">
          <%= form.submit class: "btn btn-primary mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>