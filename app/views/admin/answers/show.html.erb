<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <div class="d-md-flex gap-2">
      <div class="h4"> <%= t('.header') %> - <%= @answer.question.body %> </div>
    </div>
    <hr>
    <div class="d-md-flex mt-3 gap-2">
      <div>
        <b><%= t('.answer') %>:</b>
        <%= @answer.title %>
      </div>

      <div>
        <b><%= t('.correct') %>:</b>
        <%= @answer.correct %>
      </div>
    </div>

    <%= button_to t('element.link.back'),
                  admin_question_path(@answer.question),
                  class: "btn btn-secondary btn-sm mt-3",
                  method: :get %>
  </div>
</div>
