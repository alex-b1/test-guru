<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <div class="h4"> <%= t('.header') %> </div>

    <%= render 'shared/errors', resource: @test %>

    <table class="table align-middle mt-4">
      <thead class="table-light">
        <tr>
          <th scope="col" class="sort-by-title pointer">
            <%= t('.table_header') %>
            <%= octicon 'arrow-up', class: 'text-success' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th scope="col" class="text-center"><%=  t('.table_level') %></th>
          <th scope="col" class="text-center"><%= t('.table_count') %></th>
          <th scope="col"></th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>

      <%= render @tests %>
    </table>

    <%=button_to t('.create'), new_admin_test_path, class:"btn btn-success btn-sm", method: :get %>

  </div>
</div>



