<%= form_with model: @user, local: true do |form| %>
  <%= render 'shared/errors', resource: @user %>

  <p>
    <%= form.label :name, 'Имя' %>  <br>
    <%= form.text_field :name, id: :user_name%> <br>
  </p>

  <p>
    <%= form.label :email, 'Е-mail' %>  <br>
    <%= form.text_field :email, id: :user_email%> <br>
  </p>

  <p>
    <%= form.label :password, 'Пароль' %> <br>
    <%= form.password_field :password, id: :user_password%> <br>
  </p>
  <p>
    <%= form.label :password_confirmation, 'Подтверждение пароля' %> <br>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation%> <br>
  </p>

  <p><%= form.submit 'Создать'%></p>
<% end %>
