<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <div class="badges">
      <% if @user_badges.count > 0 %>
        <h3><%= t('.header')%>: </h3>
      <% end %>
      <div class="d-flex my-auto">
        <% @user_badges.each do |i|%>
          <% if i.badge.level == '1' %>
            <div class="count"><%= i.count %></div>
            <%= image_tag(i.badge.file_name, size: "20x20") %>
          <% end %>
          <% if i.badge.level == '2' %>
            <div class="count"><%= i.count %></div>
            <%= image_tag(i.badge.file_name, size: "20x20") %>
          <% end %>
          <% if i.badge.level == '3' %>
            <div class="count"><%= i.count %></div>
            <%= image_tag(i.badge.file_name, size: "20x20") %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>