<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
        <% if @test_passage.success? %>
            <div class="h4"><%= t('.header', title: @test_passage.test.title) %> </div>
            <hr>
            <div> <%= t('.success', percent: @test_passage.percent) %> </div>
        <% else %>
            <div class="h4"> <%= t('.fail_test') %> </div>
            <hr>
            <div> <%= t('.result', percent: @test_passage.percent) %> </div>
        <% end %>

        <%= button_to t('.to_tests'),
                      tests_path,
                      class: "btn btn-secondary btn-sm mt-3",
                      method: :get %>

        <div class="mt-3"><%= link_to t('.feedback'), feedback_path%> </div>
    </div>
</div>
